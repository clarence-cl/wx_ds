/* pages/goodsList/goodsList.wxss */
.h-goodlist,.goodslist{
  padding-top: 100rpx;
}
.nav {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  background: #fff;
}
.nav label{
  width:25%;
 text-align: center;
 position: relative;
 color: #666;
}
.nav label image{
  width: 30rpx;
  height: 30rpx;
}
.h-goods {
  height: 290rpx;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.h-goodimg {
  width: 250rpx;
  height: 250rpx;
}

.h-goodsinfo {
  width: 462rpx;
  height: 250rpx;
}

.h-goodsName {
  margin:20rpx 0 60rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 10rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #666;
  display: -webkit-box;
}
.h-price text{
  color:#f42f19;
  font-size: 38rpx;
}
.h-salesVolume{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:10rpx;
}
.h-salesVolume text{
  color: #a7a7a7;
  font-size: 24rpx;
}
.h-salesVolume :last-child{
  padding-right: 10rpx;
}
.classify{
  width: 100%;
  height: 400rpx;
  background: #fff;
  position: absolute;
  top: 80rpx;
  overflow-x: hidden;
  overflow-y: auto;
  border-bottom: 2rpx solid #eee;
}
.classify view{
  height: 100rpx;
  border-top:1rpx solid #eee;
  line-height: 100rpx;
  padding-left:20rpx;
}
.active{
  color: #f42f19 !important;
}
.xTriangle{
  width: 0;
  height: 0;
  border-top: 10rpx solid #bbb;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
}
.sTriangle{
  border-bottom: 10rpx solid #bbb;
  width: 0;
  height: 0;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
}