/**app.wxss**/
@import 'assets/wxss/font-awesome.wxss';
@import 'assets/wxss/flex.wxss';
view, input, text, i {
  font-size: 28rpx;
  color: #666666;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.goodslist {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.goods {
  width: 360rpx;
  height: 542rpx;
  margin: 10rpx 7.5rpx 10rpx 8rpx;
  overflow: hidden;
  background-color: #fff;
}

.goodsImg {
  width: 360rpx;
  height: 360rpx;
}

.goodsname {
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 10rpx;
  font-size: 38rpx;
  height: 70rpx;
  display: table;
}

.goodsname .span {
  display: table-cell;
  vertical-align: middle;
}

.coll {
  font-size: 21rpx;
  color: #b5b5b5;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.rate .coll text {
  font-size: 24rpx;
  color: #b5b5b5;
  font-weight: normal;
  margin-right: 5rpx;
}

.rate image {
  width: 25rpx;
  height: 25rpx;
}

.rate text {
  font-size: 30rpx;
  color: #f42f19;
  font-weight: 700;
}

.goodsname .span view {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: normal;
}

.hot {
  background: #f42f19;
  color: #fff;
  width: 50rpx;
  font-style: normal;
  padding: 5rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
  margin-right: 5rpx;
  display: none;
}

.price {
  padding: 0 10rpx;
  font-size: 21rpx;
  color: #b5b5b5;
  margin: 5rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.price text {
  font-size: 24rpx;
  color: #b5b5b5;
}
.rate {
  padding: 0 10rpx;
  font-size: 21rpx;
  color: #b5b5b5;
  margin: 5rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.multiline{
overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.Single line{
 overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.loading{
    height: 50rpx;
    overflow: hidden;
    display: flex;
    justify-content: center;
    padding: 10rpx 0;  
}
.loading text{
    font-size: 24rpx;
    color: #b8b8b8;
}
.loading image{
    width: 30rpx;
    height: 30rpx;
}
.active{
  color: #f42f19 !important;
}